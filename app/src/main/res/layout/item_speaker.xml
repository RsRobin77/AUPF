<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/speaker_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sabur_khan"
            app:civ_border_color="#D5FFA5"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/speaker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Dr. Md. Sabur Khan"
            android:textColor="#000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/speaker_image"
            app:layout_constraintStart_toStartOf="@+id/speaker_image"
            app:layout_constraintTop_toBottomOf="@+id/speaker_image" />

        <TextView
            android:id="@+id/speaker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="FOUNDER &amp; CHAIRMAN"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/speaker_name"
            app:layout_constraintStart_toStartOf="@+id/speaker_name"
            app:layout_constraintTop_toBottomOf="@+id/speaker_name" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

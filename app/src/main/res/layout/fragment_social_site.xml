<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.SocialSite">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/facebook"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_facebook"
        app:layout_constraintEnd_toStartOf="@+id/youtube"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/youtube"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_youtube"
        app:civ_border_color="@android:color/holo_red_dark"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toStartOf="@+id/linked_in"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/facebook"
        app:layout_constraintTop_toTopOf="@+id/facebook" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/linked_in"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_linked_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/youtube"
        app:layout_constraintTop_toTopOf="@+id/youtube" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="Connect with us"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#8A8A8A"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
